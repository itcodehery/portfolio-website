{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmitOnError": true,
      "jsx": "react-jsx",
      "extensions": [
        "ts",
        "tsx",
        "js",
        "jsx"
      ],
      "types": [
        "svelte",
        "@types/svelte",
        "@sveltejs/kit"
      ]
    }
  }  